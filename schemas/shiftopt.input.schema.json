{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/shiftopt.input.schema.json",
  "title": "shiftopt input schema (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "time",
    "channels",
    "skill_groups",
    "employment_groups",
    "forecast",
    "employees",
    "agent_groups",
    "skills",
    "shift_templates",
    "solver"
  ],
  "properties": {
    "run": {
      "type": "object",
      "description": "Optional schedule-level metadata for traceability (id/name/description). Not used by the optimizer directly.",
      "additionalProperties": false,
      "properties": {
        "schedule_id": { "type": "string", "minLength": 1 },
        "schedule_name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "created_at"],
      "properties": {
        "version": {
          "type": "string",
          "description": "Schema version for the input object (not the solver).",
          "minLength": 1
        },
        "created_at": {
          "type": "string",
          "description": "ISO 8601 datetime when this input was generated.",
          "format": "date-time"
        }
      }
    },
    "time": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start_date", "timezone", "days", "bucket_minutes"],
      "properties": {
        "start_date": {
          "type": "string",
          "description": "ISO 8601 date for day_index=0 (local date in the provided timezone).",
          "format": "date"
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone name, e.g. 'America/New_York'.",
          "minLength": 1
        },
        "days": {
          "type": "integer",
          "description": "Planning horizon length in days (fixed for v1).",
          "const": 28
        },
        "bucket_minutes": {
          "type": "integer",
          "description": "Coverage/demand bucket size in minutes (fixed for v1).",
          "const": 30
        }
      }
    },
    "channels": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/channel" },
      "unevaluatedItems": false
    },
    "skill_groups": {
      "type": "array",
      "minItems": 1,
      "description": "Master list of skill groups (stable IDs) used to join forecast rows and employees.",
      "items": { "$ref": "#/$defs/skill_group" },
      "unevaluatedItems": false
    },
    "employment_groups": {
      "type": "array",
      "minItems": 1,
      "description": "Master list of employment groups (contracts) used to assign labor constraints consistently across employees (e.g., part-time vs full-time).",
      "items": { "$ref": "#/$defs/employment_group" },
      "unevaluatedItems": false
    },
    "forecast": {
      "type": "array",
      "minItems": 1,
      "description": "Forecast rows keyed by (skill_group_id, timestamp_local, direction, channel). Timestamp format is DD-MON-YYYY HH24:MI:SS.",
      "items": { "$ref": "#/$defs/forecast_row" }
    },
    "operating_hours": {
      "type": "array",
      "description": "Optional operating hours windows. Used to define when work streams (direction+channel) are considered open. If omitted, assume 24x7 for all (direction, channel).",
      "items": { "$ref": "#/$defs/operating_window" }
    },
    "priority_rules": {
      "type": "array",
      "description": "Optional time-of-day routing/coverage priority rules. Used to translate priority into different understaff penalties during different windows.",
      "items": { "$ref": "#/$defs/priority_window" }
    },
    "employees": {
      "type": "array",
      "minItems": 1,
      "description": "Employee supply list (named individuals) with a primary skill group mapping.",
      "items": { "$ref": "#/$defs/employee" }
    },
    "agent_groups": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/agent_group" },
      "unevaluatedItems": false
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "description": "Which agent groups can contribute capacity to which channels (binary in v1).",
      "items": { "$ref": "#/$defs/skill" }
    },
    "shift_templates": {
      "type": "array",
      "minItems": 1,
      "description": "Shift templates define when a scheduled agent is working across buckets. For simplicity, you can define templates by duration (4h/8h), or explicitly via bucket_work_pattern.",
      "items": { "$ref": "#/$defs/shift_template" }
    },
    "solver": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Solver backend name (v1 supports CBC via PuLP).",
          "enum": ["cbc"]
        },
        "time_limit_seconds": {
          "type": "integer",
          "description": "Optional wall-clock time limit for the solver.",
          "minimum": 1
        },
        "mip_gap": {
          "type": "number",
          "description": "Optional relative MIP gap target (0.0 to 1.0).",
          "minimum": 0,
          "maximum": 1
        }
      }
    }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9_\\-]*$",
      "description": "Identifier used as a stable key. Recommended: letters/numbers/underscore/dash, no spaces."
    },
    "channel": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "forecast_timestamp": {
      "type": "string",
      "description": "Local timestamp in DD-MON-YYYY HH24:MI:SS (e.g., 01-JAN-2026 06:00:00). Month must be uppercase JAN..DEC.",
      "pattern": "^(0[1-9]|[12][0-9]|3[01])-(JAN|FEB|MAR|APR|MAY|JUN|JUL|AUG|SEP|OCT|NOV|DEC)-\\d{4} ([01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$"
    },
    "forecast_row": {
      "type": "object",
      "additionalProperties": false,
      "required": ["skill_group_id", "timestamp_local", "direction", "channel", "agents"],
      "properties": {
        "skill_group_id": {
          "$ref": "#/$defs/id",
          "description": "Skill group identifier for this forecast row."
        },
        "timestamp_local": { "$ref": "#/$defs/forecast_timestamp" },
        "direction": {
          "type": "string",
          "description": "Direction of work (inbound vs outbound).",
          "enum": ["inbound", "outbound"]
        },
        "channel": {
          "type": "string",
          "minLength": 1,
          "description": "Channel identifier (recommended: match channels[].id such as 'voice', 'email', 'chat')."
        },
        "agents": {
          "type": "integer",
          "minimum": 0,
          "description": "Required staffed agents for this row."
        }
      }
    },
    "time_hhmm": {
      "type": "string",
      "description": "Local time in HH:MM (24h).",
      "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
    },
    "priority_window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start_time_local", "end_time_local", "priorities"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "start_time_local": { "$ref": "#/$defs/time_hhmm" },
        "end_time_local": { "$ref": "#/$defs/time_hhmm" },
        "applies_to_days": {
          "type": "array",
          "description": "Optional day-of-week filter (defaults to all days if omitted).",
          "items": {
            "type": "string",
            "enum": ["mon", "tue", "wed", "thu", "fri", "sat", "sun"]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "priorities": {
          "type": "array",
          "minItems": 1,
          "description": "Priority ranking and optional weight multipliers for understaff penalties during this window. Lower rank = higher priority.",
          "items": { "$ref": "#/$defs/priority_item" }
        }
      }
    },
    "priority_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["direction", "channel", "rank"],
      "properties": {
        "direction": { "type": "string", "enum": ["inbound", "outbound"] },
        "channel": { "type": "string", "minLength": 1 },
        "rank": {
          "type": "integer",
          "minimum": 1,
          "description": "1 is highest priority. Ranks should be unique within a window."
        },
        "understaff_weight": {
          "type": "number",
          "minimum": 0,
          "description": "Optional multiplier applied to the base understaff penalty for this (direction, channel) during this window."
        }
      }
    },
    "operating_window": {
      "type": "object",
      "additionalProperties": false,
      "required": ["direction", "channel", "start_time_local", "end_time_local"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "direction": { "type": "string", "enum": ["inbound", "outbound"] },
        "channel": { "type": "string", "minLength": 1 },
        "start_time_local": { "$ref": "#/$defs/time_hhmm" },
        "end_time_local": { "$ref": "#/$defs/time_hhmm" },
        "applies_to_days": {
          "type": "array",
          "description": "Optional day-of-week filter (defaults to all days if omitted).",
          "items": {
            "type": "string",
            "enum": ["mon", "tue", "wed", "thu", "fri", "sat", "sun"]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "agent_group": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "name": { "type": "string", "minLength": 1 },
        "min_headcount_per_day": {
          "type": "integer",
          "minimum": 0,
          "description": "Optional minimum number of scheduled agents from this group per day (across all templates)."
        },
        "max_weekly_paid_hours": {
          "type": "number",
          "minimum": 0,
          "description": "Optional cap on total paid hours per ISO week for this group."
        },
        "max_days_per_week": {
          "type": "integer",
          "minimum": 0,
          "maximum": 7,
          "description": "Optional cap on number of worked days per ISO week for this group."
        }
      }
    },
    "employee": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "skill_group_ids", "employment_group_id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "skill_group_ids": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "description": "Skill groups this employee can work. Used to allow cross-skill allocation based on priorities.",
          "items": { "$ref": "#/$defs/id" }
        },
        "employment_group_id": {
          "$ref": "#/$defs/id",
          "description": "Employment group / contract id for this employee (used to apply min/max hour constraints)."
        },
        "pay_rate": {
          "type": "number",
          "minimum": 0,
          "description": "Optional pay rate for this employee (currency/hour). If omitted, group hourly_cost is used."
        }
      }
    },
    "skill_group": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "name": { "type": "string", "minLength": 1 }
      }
    },
    "employment_group": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "hours_per_week", "hours_per_day"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "name": { "type": "string", "minLength": 1 },
        "hours_per_week": { "$ref": "#/$defs/min_max_hours" },
        "hours_per_day": { "$ref": "#/$defs/min_max_hours" }
      }
    },
    "min_max_hours": {
      "type": "object",
      "additionalProperties": false,
      "required": ["min", "max"],
      "description": "Min/max hours. Note: JSON Schema cannot reliably enforce min<=max without nonstandard extensions; validate in code.",
      "properties": {
        "min": { "type": "number", "minimum": 0 },
        "max": { "type": "number", "minimum": 0 }
      }
    },
    "skill": {
      "type": "object",
      "additionalProperties": false,
      "required": ["agent_group_id", "channel_id", "can_handle"],
      "properties": {
        "agent_group_id": { "$ref": "#/$defs/id" },
        "channel_id": { "$ref": "#/$defs/id" },
        "can_handle": {
          "type": "boolean",
          "const": true,
          "description": "Binary skill flag (v1)."
        }
      }
    },
    "shift_template": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "start_time_local"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "name": { "type": "string", "minLength": 1 },
        "start_time_local": {
          "allOf": [{ "$ref": "#/$defs/time_hhmm" }],
          "description": "Local shift start time in HH:MM (24h)."
        },
        "duration_minutes": {
          "type": "integer",
          "description": "Template duration in minutes (simple mode). In v1 we recommend 4h and 8h templates.",
          "enum": [240, 480]
        },
        "bucket_work_pattern": {
          "type": "array",
          "description": "Explicit mode: array of 0/1 per bucket from shift start across its total span. 1=working, 0=not working. Overrides duration_minutes if provided.",
          "minItems": 1,
          "items": { "type": "integer", "enum": [0, 1] }
        },
        "paid_minutes": {
          "type": "integer",
          "description": "Optional explicit paid minutes. If provided, it should equal sum(bucket_work_pattern)*bucket_minutes.",
          "minimum": 0
        }
      },
      "allOf": [
        {
          "anyOf": [
            { "required": ["bucket_work_pattern"] },
            { "required": ["duration_minutes"] }
          ]
        }
      ]
    }
  }
}

